  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "moduleResolution": "Node"
